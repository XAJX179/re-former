<%= form_with model: @user do |form| %>
  <%= form.label "username", "Your username here: " %>
  <%= form.text_field "username", id: "user_username", placeholder: "user_123" %>

  <%= form.label "email", "Your email here: " %>
  <%= form.email_field "email", id: "user_email", placeholder: "example@gmail.com" %>

  <%= form.label "password", "Your password here: " %>
  <%= form.password_field "password", id: "user_password", placeholder: "**********" %>

  <%= form.submit "Submit" %>
<% end %>
