<%# disabling turbo like this still adds a hidden field with auth automatically. %>
<%= form_tag("/users", method: :post, data: {turbo: false}) do %>
  <%= hidden_field_tag "authenticity_token", form_authenticity_token %>
  <%= label_tag "user-username", "Username" %>
  <%= text_field_tag "username",
  @user ? @user.username : nil,
  id: "user-username",
  placeholder: "user_123" %>

  <%= label_tag "user-email", "Email" %>
  <%= email_field_tag "email",
  @user ? @user.email : nil,
  id: "user-email",
  placeholder: "example@email.com" %>

  <%= label_tag "user-password", "Password" %>
  <%= password_field_tag "password",
  @user ? @user.password : nil,
  id: "user-password",
  placeholder: "*********" %>

  <%= submit_tag "Submit" %>
<% end %>
